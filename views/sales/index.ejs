<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sales</title>
  </head>
  <body>
    <h1>Sales</h1>
    <a href="/sales/new">New Sale</a>
    <% if (sales.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Book</th>
          <th>Year</th>
          <th>Sales</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% sales.forEach(sale => { %>
        <tr>
          <td><%= sale.book.name %></td>
          <td><%= sale.year %></td>
          <td><%= sale.sales %></td>
          <td>
            <a href="/sales/<%= sale._id %>">View</a>
            <a href="/sales/<%= sale._id %>/edit">Edit</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p>No sales found.</p>
    <% } %>
    <br />
    <a href="/">Go back to Home Menu</a>
  </body>
</html>
